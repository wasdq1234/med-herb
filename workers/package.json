{
  "name": "med-herb-workers",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply med-herb-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply med-herb-db --remote",
    "db:seed": "wrangler d1 execute med-herb-db --local --file=drizzle/seed.sql",
    "db:seed:remote": "wrangler d1 execute med-herb-db --remote --file=drizzle/seed.sql",
    "db:seed:generate": "tsx scripts/generate-seed-sql.ts > drizzle/seed.sql",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "drizzle-orm": "^0.29.0",
    "hono": "^4.0.0",
    "nanoid": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.1.0",
    "@cloudflare/workers-types": "^4.20240117.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.3.0",
    "drizzle-kit": "^0.20.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "wrangler": "^3.22.0"
  }
}
